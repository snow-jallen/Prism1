<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Prism1.Views.MainPage"
             Title="{Binding Title}">

    <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
        <Label Text="Welcome to Xamarin Forms and Prism!" />
        <Button Text="Go to tabbed page"
                Command="{Binding GoToTabbedPage}" />
        <Label Text="Enter some string" />
        <Entry Text="{Binding EntryValue}" />
        <Button Text="Go to content page"
                Command="{Binding GoToContentPage}" />
    </StackLayout>

</ContentPage>